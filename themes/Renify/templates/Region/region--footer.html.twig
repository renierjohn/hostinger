{% set lazy  = '/themes/Renify/images/lazy/lazy.jpg' %}

<section id="donate" style="background-color: #f5f5f5;">
    <div style="text-align:center;">
      <h3 style="padding-top: 3rem;margin:0;">Donate</h3>      
      <p>Help Improve the site and Explore</p>
    </div>
    <div class="row block-1-4 block-tab-full" >
      <div class="col-block" >
          <img src={{lazy}} data-src="/themes/Renify/images/donate/maya.png" class="img-fluid lazy" alt="">
      </div>
      <div class="col-block" >
        <form action="https://www.paypal.com/donate" method="post" target="_top" style="text-align:center;">
          <input type="hidden" name="hosted_button_id" value="97JR4UFJLF2HG" />
          <input type="image" src="https://pics.paypal.com/00/s/Y2JhMzRkMWYtOGM4Ni00Njg0LWJlYWYtZTE4NGZlN2M0YWM4/file.PNG"
          border="0" name="submit"
          title="PayPal - The safer, easier way to pay online!" alt="Donate with PayPal button"
          style="width:100%;" />
        </form>
      </div>
  </div>
</section>

<footer class="s-footer footer" id="signup">
  {{content}}
</footer>
