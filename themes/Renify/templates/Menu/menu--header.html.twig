<div class="row">
  <div class="header-logo">
    <a class="site-logo" href="/">
      <img src="/themes/Renify/favicon.ico" alt="Homepage" />
    </a>
  </div>
  <nav class="header-nav-wrap">
    {% if items %}
      <ul class="header-main-nav">
        {% for item in items %}
          <li>
            {{ link(item.title, item.url, { 'class': '' }) }}
          </li>
        {% endfor %}
        {% if logged_in %}
          <li>
            <a href="/myplace">My Places</a>
          </li>
          <li>
            <a href="/node/add/places">Add Place</a>
          </li>
        {% endif %}
      </ul>
    {% endif %}

    {% if logged_in %}
      <div class="header-cta">
        <a href="/user/logout" class="btn btn--primary header-cta__btn padding--left--0">
          <ul>
            <li>
              <img src='{{user_profile}}'  class="img-no-radius" alt="...">
            </li>
            <li>
              Logout
            </li>
          </ul>
        </a>
      </div>
    {% else %}
      <div class="header-cta">
        <a href="/user/login" class="btn btn--stroke--reverse header-cta__btn"><i class="fas fa-user"></i>Login Now</a>
      </div>
    {% endif %}
  </nav> 

  <a class="header-menu-toggle" href="#"><span>Menu</span></a>
</div>